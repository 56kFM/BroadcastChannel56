---
const { BASE_URL } = Astro.locals
const title = 'Page not found'
const description = 'The page youâ€™re looking for does not exist.'
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="canonical" href={BASE_URL} />
    <meta name="robots" content="noindex" />
  </head>
  <body>
    <main
      style="min-height:100vh;display:grid;place-items:center;background:var(--cell-background-color);color:var(--text-color)"
    >
      <section style="text-align:center;padding:2rem">
        <h1 style="margin:0 0 0.5rem 0">404</h1>
        <p style="margin:0 0 1rem 0">{title}</p>
        <p style="opacity:.8;margin:0 0 1.5rem 0">{description}</p>
        <p><a href={BASE_URL} style="text-decoration:underline">Return home</a></p>
      </section>
    </main>
  </body>
</html>
