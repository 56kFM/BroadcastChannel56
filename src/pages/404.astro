---
import Layout from '../layouts/base.astro'
import four from '../assets/four.png?url'

const { BASE_URL } = Astro.locals
const title = 'Page not found'
const description = 'The page youâ€™re looking for does not exist.'
---

<Fragment slot="head">
  <meta name="robots" content="noindex" />
  <title>{title}</title>
</Fragment>

<Layout id="main-container">
  <Fragment slot="header"></Fragment>
  <Fragment slot="footer"></Fragment>

  <section style="min-height:60vh;display:grid;place-items:center;padding:2rem">
    <div style="text-align:center">
      <img
        src={four}
        alt="404 Not Found"
        decoding="async"
        loading="lazy"
        style="display:block;margin:0 auto 1rem auto;max-inline-size:min(100%, 20rem);height:auto"
      />
      <h1 style="margin:0 0 .5rem 0">404</h1>
      <p style="margin:0 0 1rem 0">{title}</p>
      <p style="opacity:.8;margin:0 0 1.5rem 0">{description}</p>
      <p><a href={BASE_URL} class="site-title">Return home</a></p>
    </div>
  </section>
</Layout>
