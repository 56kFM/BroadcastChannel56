---
import Header from './header.astro'

const rawTag = typeof Astro.props.tag === 'string' ? Astro.props.tag : ''
const trimmedTag = rawTag.trim()
const tagLabel = trimmedTag.length > 0 ? (trimmedTag.startsWith('#') ? trimmedTag : `#${trimmedTag}`) : '#'
const { channel } = Astro.props
---

<Header channel={channel} titleSuffix={tagLabel} />
