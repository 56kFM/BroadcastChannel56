---
import AudioPlayer from './AudioPlayer.astro'

const { kind, url, mime, caption, downloadHref, inline, title } = Astro.props as {
  kind: 'image' | 'video' | 'audio' | 'link'
  url: string
  mime?: string
  caption?: string
  downloadHref?: string
  inline?: boolean
  title?: string
}
---

{
  kind === 'audio' && url && (
    <AudioPlayer
      src={url}
      mime={mime ?? undefined}
      title={caption ?? title ?? 'Audio file'}
      downloadHref={downloadHref ?? url}
      inline={inline}
    />
  )
}
