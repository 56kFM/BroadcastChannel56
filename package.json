{
  "name": "broadcast-channel",
  "type": "module",
  "version": "0.1.7",
  "private": true,
  "packageManager": "pnpm@10.18.3",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "pnpm exec astro build",
    "preview": "pnpm exec astro preview",
    "astro": "astro",
    "test": "cross-env COLUMNS=80 vitest run",
    "test:unit": "cross-env COLUMNS=80 vitest run tests/unit --reporter=dot",
    "test:watch": "cross-env COLUMNS=80 vitest --reporter=dot",
    "lint": "eslint \"src/**/*.{ts,tsx,js,jsx,astro}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx,js,jsx,astro}\" --fix",
    "postinstall": "node scripts/postinstall.cjs",
    "check": "pnpm exec astro check",
    "typecheck": "pnpm exec tsc --noEmit",
    "test:canary": "node tests/canaries/sanitize-canary.mjs",
    "doctor": "node ./scripts/doctor.mjs",
    "snapshot": "node ./scripts/snapshot.mjs",
    "nav:doctor": "node ./scripts/nav-doctor.mjs"
  },
  "dependencies": {
    "@astrojs/rss": "^4.0.12",
    "@sentry/astro": "^8.27.0",
    "astro-seo": "^0.8.4",
    "cheerio": "1.0.0-rc.12",
    "dayjs": "^1.11.13",
    "flourite": "^1.3.0",
    "lru-cache": "^11.0.0",
    "ofetch": "^1.3.4",
    "prismjs": "^1.29.0",
    "prismjs-components-importer": "^0.2.0",
    "sanitize-html": "^2.13.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.0.0",
    "@astrojs/cloudflare": "^12.6.10",
    "@astrojs/node": "^9.4.6",
    "@types/prismjs": "^1.26.5",
    "astro": "^5.14.4",
    "astro-eslint-parser": "^1.0.2",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "cssnano": "^7.0.5",
    "esbuild": "^0.25.0",
    "eslint": "9.5.0",
    "eslint-plugin-astro": "^1.2.3",
    "eslint-plugin-format": "^0.1.2",
    "lint-staged": "^15.2.9",
    "postcss-nesting": "^13.0.0",
    "prettier-plugin-astro": "^0.14.1",
    "simple-git-hooks": "^2.11.0",
    "std-env": "^3.7.0",
    "vitest": "^2.1.9"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx,astro}": "eslint --fix"
  },
  "browserslist": [
    "defaults"
  ]
}
